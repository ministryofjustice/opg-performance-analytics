{
  "name": "opg-performance-analytics",
  "version": "0.0.1",
  "description": "Performance Analytics plugin for usage with Google Analytics",
  "main": "src/index.js",
  "author": "John Nolan <john.nolan@digital.justice.gov.uk>",
  "repository": {
    "type": "git",
    "url": "https://github.com/ministryofjustice/opg-performance-analytics.git"
  },
  "keywords": [
    "opg",
    "ministry of justice",
    "analytics",
    "error tracking",
    "rum",
    "performance metrics"
  ],
  "homepage": "https://github.com/ministryofjustice/opg-performance-analytics",
  "bugs": {
    "url": "https://github.com/ministryofjustice/opg-performance-analytics/issues"
  },
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "webpack",
    "build:babel": "babel ./src -d ./lib --ignore \"src/**/*.test.js\"",
    "build:watch": "babel ./src -w -d ./lib",
    "eslint:check": "eslint src/**/*.js",
    "prettier:staged": "pretty-quick â€” staged",
    "prettier:check": "prettier --check src/**/*.js",
    "prettier:fix": "prettier --write src/**/*.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:staged": "CI=true jest --findRelatedTests src/**/*.js",
    "test:coverage": "CI=true jest --coverage src/**/*.js",
    "ci:coverage": "CI=true jest --coverage src/**/*.js",
    "ci:test": "CI=true jest",
    "ci:release": "HUSKY_SKIP_HOOKS=1 CI=true emantic-release"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "babel-jest": "^25.5.1",
    "commitizen": "^4.0.4",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^25.4.0",
    "lint-staged": "^10.1.7",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "semantic-release": "^17.0.7",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "yarn eslint:check",
      "yarn prettier:staged",
      "yarn test:staged"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "perfume.js": "^5.0.0-rc.15"
  }
}
